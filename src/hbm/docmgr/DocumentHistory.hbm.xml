<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.app.docmgr.model">
	<class
		name="DocumentHistory"
		table="document_history"
	>
		<id
			name="id"
			type="java.lang.Long"
			column="id"
		>
			<generator class="identity"/>
		</id>

		<property
			name="historyDate"
			column="history_date"
			type="java.util.Date"
			not-null="true"
		/>
		<property
			name="historyBy"
			column="history_by"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="auditTrailId"
			column="audit_trail_id"
			type="long"
			not-null="true"
		/>

		<property
			name="documentId"
			column="document_id"
			type="long"
			not-null="true"
		/>

		<property
			name="name"
			column="name"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="documentType"
			column="document_type"
			type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="contentType"
			column="content_type"
				type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="documentNumber"
			column="document_number"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="repositoryId"
			column="repository_id"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="documentVersion"
			column="document_version"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="description"
			column="description"
			type="string"
			not-null="false"
			length="1000"
		/>
		<many-to-one
			name="securityLevel"
			column="security_level"
			class="com.app.docmgr.model.Lookup"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="owner"
			column="owner"
			class="com.app.docmgr.model.User"
			not-null="true"
		>
		</many-to-one>
		<many-to-one
			name="status"
			column="status"
			class="com.app.docmgr.model.Status"
			not-null="true"
		>
		</many-to-one>
		<property
			name="createdDate"
			column="created_date"
			type="java.util.Date"
			not-null="true"
		/>
		<property
			name="createdBy"
			column="created_by"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="lastUpdatedDate"
			column="last_updated_date"
			type="java.util.Date"
			not-null="false"
		/>
		<property
			name="lastUpdatedBy"
			column="last_updated_by"
			type="string"
			not-null="false"
			length="30"
		/>

		<many-to-one
			name="parentFolder"
			column="parent_folder"
			class="com.app.docmgr.model.Folder"
			not-null="true"
		>
		</many-to-one>
		
		<many-to-one
			name="parentDocument"
			column="parent_document"
			class="com.app.docmgr.model.Document"
			not-null="false"
		>
		</many-to-one>

	</class>
</hibernate-mapping>
