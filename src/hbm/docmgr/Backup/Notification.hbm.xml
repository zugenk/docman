<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.app.docmgr.model">
	<class
		name="Notification"
		table="notification"
	>
		<id
			name="id"
			type="java.lang.Long"
			column="id"
		>																																																																																																																																																																																																																																																																																																																																																																																																																															
			<generator class="identity"/>
		</id>
		<property
			name="description"
			column="note"
			type="string"
			not-null="true"
			length="255"
		/>
		<many-to-one	
			name="notificationType"
			column="notification_type"
			class="com.app.docmgr.model.Lookup"
			not-null="true"
		>
		</many-to-one>
		
		<property
			name="createdDate"
			column="created_date"
			type="java.util.Date"
			not-null="true"
		/>
		<many-to-one
			name="message"
			column="message"
			class="com.app.docmgr.model.Message"
			not-null="true"
		>
		</many-to-one>
	</class>	
</hibernate-mapping>