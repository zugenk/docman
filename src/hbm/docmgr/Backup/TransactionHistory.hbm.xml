<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.app.docmgr.model">
	<class
		name="TransactionHistory"
		table="transaction_history"
	>
		<id
			name="id"
			type="java.lang.Long"
			column="id"
		>
			<generator class="sequence">
				<param name="sequence">transaction_history_id_seq</param>
            </generator>
		</id>

		<property
			name="sessionId"
			column="session_id"
			type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="doneBy"
			column="done_by"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="transactionReferenceNumber"
			column="transaction_reference_number"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="bankReferenceNumber"
			column="bank_reference_number"
			type="string"
			not-null="false"
			length="50"
		/>
		<many-to-one
			name="transactionType"
			column="transaction_type"
			class="com.app.docmgr.model.Lookup"
			not-null="true"
		>
		</many-to-one>
		
		<many-to-one
			name="account"
			column="account"
			class="com.app.docmgr.model.Account"
			not-null="false"
		>
		</many-to-one>
		
		<property
			name="targetAccount"
			column="target_account"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="message"
			column="message"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="currency"
			column="currency"
			type="string"
			not-null="false"
			length="10"
		/>		
		<property
			name="amount"
			column="amount"
			type="java.lang.Double"
			not-null="false"
		/>
		<property
			name="debitExchangeRate"
			column="debit_exchange_rate"
			type="java.lang.Double"
			not-null="false"
		/>
		<property
			name="creditExchangeRate"
			column="credit_exchange_rate"
			type="java.lang.Double"
			not-null="false"
		/>
		<property
			name="bankCharges"
			column="bank_charges"
			type="java.lang.Double"
			not-null="false"
		/>
		<property
			name="totalAmountDebited"
			column="total_amount_debited"
			type="java.lang.Double"
			not-null="false"
		/>		
		<property
			name="detail"
			column="detail"
			type="string"
			not-null="false"
			length="255"
		/>
		
		<many-to-one
			name="status"
			column="status"
			class="com.app.docmgr.model.Status"
			not-null="true"
		>
		</many-to-one>
		
		<property
			name="transactionDate"
			column="transaction_date"
			type="java.util.Date"
			not-null="true"
		/>
	</class>	
</hibernate-mapping>